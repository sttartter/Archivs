local target
 onAttackingCreatureChange(function(creature, oldCreature)
  if creature then
    target = creature
  end
end)

local lex = addIcon("lex", {item =1982, text = "LAST EXIVA"}, function()
  if not target then return end
  say('exiva "' .. target:getName())
end)

