local ssaMightr = macro(190, "", function()
 if hppercent() <= hpPercent then
      if getNeck() == nil or getNeck():getId() ~= amulet then
        g_game.equipItemId(amulet)
end

 if getFinger() == nil or getFinger():getId() ~= might then
    g_game.equipItemId(might)
    end
  end
end)
